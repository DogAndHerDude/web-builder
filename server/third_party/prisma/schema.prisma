// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id
  email     String    @unique
  site      Site[]
  createdAt DateTime  @map("created_at")
  updatedAt DateTime? @map("updated_at")

  @@map("user")
}

model Subscription {
  id             String   @id
  externalPlanId String   @map("external_plan_id")
  createdAt      DateTime @map("created_at")
  updatedAt      DateTime @map("updated_at")

  @@map("subscription")
}

model Site {
  id              String    @id
  title           String
  pages           Page[]
  user            User      @relation(fields: [userId], references: [id])
  userId          String    @map("user_id")
  isPublished     Boolean   @map("is_published")
  repository      String?
  createdAt       DateTime  @map("created_at")
  updatedAt       DateTime? @map("updated_at")
  lastPublishedAt DateTime? @map("last_published_at")

  @@map("site")
}

model Page {
  id           String    @id
  type         String    @default("STATIC")
  title        String
  slug         String
  dependencies Bytes
  nodes        Bytes
  pages        Page[]    @relation(name: "subPages")
  createdAt    DateTime  @map("created_at")
  updatedAt    DateTime? @map("updated_at")
  site         Site?     @relation(fields: [siteId], references: [id])
  siteId       String?   @map("site_id")
  Page         Page?     @relation(name: "subPages", fields: [pageId], references: [id])
  pageId       String?   @map("page_id")

  @@map("page")
}
